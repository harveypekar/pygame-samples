import pygame

pygame.init()
screen = pygame.display.set_mode((800, 600))
pygame.display.set_caption("input-mouse-buttons")

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    

    screen.fill((0, 0, 0))  

    # get the mouse position
    mouse_position = pygame.mouse.get_pos()

    # we're going to modify the position to match the mouse position
    # we use 0 and 1 to index, they refer to the x and y axis
    bounds = (mouse_position[0], mouse_position[1], 50, 50)

    # Draw a cyan rectangle
    pygame.draw.rect(screen, (255, 0, 0), bounds)  

    # Show our drawing on the screen
    pygame.display.flip()