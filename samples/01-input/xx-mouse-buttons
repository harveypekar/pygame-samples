import pygame

pygame.init()
screen = pygame.display.set_mode((800, 600))
pygame.display.set_caption("input-mouse-buttons")

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    

    # we're going to change the color depending on the mouse button state
    color = [0, 0, 0]

    # get an array of booleans that represent whether the mouse button is down or not
    buttons_pressed = pygame.mouse.get_pressed()

    # if the left mouse button is pressed, set the red channel
    if buttons_pressed[0]:
        color[0] = 255

    # if the middle mouse button is pressed, set the green channel
    if buttons_pressed[1]:
        color[1] = 255
 
    # if the right mouse button is pressed, set the green channel
    if buttons_pressed[2]:
        color[2] = 255

    screen.fill(color)  

    pygame.display.flip()